{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "noEmitOnError": true
  },
  "files": [
    "app/contracts/build.d.ts",
    "typings/main.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts",
    "typings/main.d.ts"
  ]
}